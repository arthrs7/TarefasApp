@model TarefasApp.Models.Tarefa

<h1>Editar Tarefa</h1>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <label>Título:</label>
    <input type="text" name="Titulo" value="@Model.Titulo" /><br/>
    <label>Descrição:</label>
    <input type="text" name="Descricao" value="@Model.Descricao" /><br/>
    <label>Concluída:</label>
    <input type="checkbox" name="Concluida" checked="@Model.Concluida" /><br/>
    <button type="submit">Salvar</button>
</form>
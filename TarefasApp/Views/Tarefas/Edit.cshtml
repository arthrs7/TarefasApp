@model TarefasApp.Models.Tarefa

@{
    ViewData["Title"] = "Editar Tarefa";
}

<h1 class="my-4">✏️ Editar Tarefa</h1>

<form method="post" style="background:none;box-shadow:none;padding:0;border:none;">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">Título:</label>
        <input type="text" name="Titulo" value="@Model.Titulo" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Descrição:</label>
        <input type="text" name="Descricao" value="@Model.Descricao" class="form-control" />
    </div>
    <div class="form-check mb-3">
        <input type="checkbox" name="Concluida" class="form-check-input" id="concluidaCheck" value="true" @(Model.Concluida ? "checked" : "") />
        <label class="form-check-label" for="concluidaCheck">Concluída</label>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="/Tarefas" class="btn btn-secondary ms-2">Voltar</a>
</form>
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TarefasApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TarefasApp.styles.css" asp-append-version="true" />
    <style>
        body { background: #f8fafc; }
        .navbar-brand { font-weight: bold; font-size: 1.5rem; }
        .footer { background: #f1f3f6; }
        .dark-mode { background: #121212; color: #e0e0e0; }
        .dark-mode .navbar { background: #1f1f1f; }
        .dark-mode .footer { background: #1f1f1f; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Tarefas">📝 TarefasApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Tarefas">Tarefas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Home/Privacy">Privacidade</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer border-top text-muted mt-5 py-3">
        <div class="container text-center">
            &copy; 2025 - TarefasApp - Feito por Arthur Gomes
            <button id="toggleDark" class="btn btn-sm btn-outline-secondary ms-3" title="Alternar modo escuro">🌙</button>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(function() {
            $('#toggleDark').on('click', function() {
                $('body').toggleClass('dark-mode');
                localStorage.setItem('darkMode', $('body').hasClass('dark-mode'));
            });
            if (localStorage.getItem('darkMode') === 'true') {
                $('body').addClass('dark-mode');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
